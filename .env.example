# Pushover Notification Settings
# Copy this file to ~/.claude/.env and replace with your actual values
# Then source it in your shell profile: echo 'source ~/.claude/.env' >> ~/.bashrc

# Required: Get these from https://pushover.net
PUSHOVER_USER_KEY=REPLACE_WITH_YOUR_USER_KEY
PUSHOVER_APP_TOKEN=REPLACE_WITH_YOUR_APP_TOKEN

# Optional settings
PUSHOVER_ENABLED=true
PUSHOVER_MIN_TIME=5
PUSHOVER_PRIORITY=0
PUSHOVER_SOUND=

# Other notification settings
CLAUDE_NOTIFIER_TTS=true
CLAUDE_NOTIFIER_SOUND=true
CLAUDE_NOTIFIER_MIN_TIME=5
